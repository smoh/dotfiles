# This should be at the very bottom
Host *
  UseKeychain yes
  AddKeysToAgent yes

# IoA gateway machine
Host muon
  HostName muon4.ast.cam.ac.uk
  User soh

Host cappc
  HostName cappc127.ast.cam.ac.uk

Host ioa
  User soh
  ProxyCommand ssh muon nc calx207.ast.cam.ac.uk 22
  ControlPath ~/.ssh/sockets/%r@%h-%p
  ControlMaster auto
  ControlPersist 2h

Host desk
  User soh
  ProxyCommand ssh muon nc calx111.ast.cam.ac.uk 22
  ControlPath ~/.ssh/sockets/%r@%h-%p
  ControlMaster auto
  ControlPersist 2h
