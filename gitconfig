[user]
	name = Semyeong@hecate
	email = semyeong.oh@gmail.com
[core]
	excludesfile = ~/.gitignore_global
	editor = vim
	autocrlf = input
	safecrlf = true
[diff]
    tool = mvimdiff
[alias]
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)[%an]%Creset' --abbrev-commit --date=relative --all
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    type = cat-file -t
    dump = cat-file -p
    ls   = ls-tree HEAD
    remote = remote -v
    branch = branch -v

[color]
	ui = true
    diff = auto
[difftool "mvimdiff"]
	cmd = mvim -f -d \"$LOCAL\" \"$REMOTE\"
